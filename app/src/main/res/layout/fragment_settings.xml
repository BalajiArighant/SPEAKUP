<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_constrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:id="@+id/classic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@color/orange1"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="More options"
                android:textColor="@color/white2"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton

                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/blue1"
                android:drawableLeft="@drawable/remainder"
                android:text="Remainder"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Notifications"
                android:drawableLeft="@drawable/notification"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Language"
                android:drawableLeft="@drawable/language"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Parental Control"

                android:drawableLeft="@drawable/parental_control"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Feedback"
                android:drawableLeft="@drawable/feedback"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Therapist Consultancy"
                android:drawableLeft="@drawable/therapist"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Account settings"
                android:drawableLeft="@drawable/settings"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Therapist Consultancy"
                android:drawableLeft="@drawable/therapist"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue1"
                android:text="Logout_button"
                android:drawableLeft="@drawable/ic_baseline_login_24"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>










